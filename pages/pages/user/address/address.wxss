page {
  background-color: #f5f5f5;
}
.address-list-box {
  background-color: #fff;
}
.address-list {
  color: #27323f;
  border-bottom: 2rpx solid #f5f5f5;
}
.address-active {
  color: #ffd305;
  font-size: 22rpx;
  padding: 2rpx 12rpx;
  border: 2rpx solid #ffd305;
  border-radius: 4rpx;
  margin-top: 12rpx;
}
.address-number {
  font-size: 30rpx;
  font-weight: 500;
}
.address-info {
  font-size: 24rpx;
  color: #7b8196;
  padding-top: 14rpx;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.no-more-goods {
  width: 100%;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.no-order-img {
  width: 200rpx;
  height: 200rpx;
}
.no-more-goods .text {
  font-size: 26rpx;
  color: #bfbfbf;
}
.bottom-box {
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #ffd305;
  color: #27323f;
  width: 100%;
  height: 90rpx;
  align-items: center;
  justify-content: center;
  display: flex;
  font-size: 30rpx;
}
.bottom-box span {
  padding-right: 10rpx;
}
.iphonex-bottom {
  bottom: 67rpx !important;
}
