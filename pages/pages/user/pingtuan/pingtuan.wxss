page {
  background-color: #f5f5f5;
}
.order-content-list {
  margin-top: 20rpx;
}
.order-content-list .order-list {
  color: #27323f;
  background-color: #ffffff;
  border-bottom: 20rpx solid #f5f5f5;
}
.order-content-list .order-list .order-ui-row {
  border-bottom: 2rpx solid #f5f5f5;
}
.order-content-list .order-list .order-ui-row .order-goods-name {
  width: 95%;
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.order-content-list .order-list .order-ui-row .order-goods-info {
  width: 95%;
  padding-top: 12rpx;
  color: #7b8196;
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.order-content-list .order-list .order-button-time {
  display: flex;
  height: 60rpx;
  background-color: #ffd305;
  color: #27323f;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-radius: 4rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  min-width: 160rpx;
}
.order-content-list .order-list .order-button-time text {
  width: 60rpx;
  padding-right: 6rpx;
}
.order-content-list .order-list .order-button {
  border: 2rpx solid #e2e2e2;
  margin-right: 26rpx;
  color: #27323f;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  font-size: 26rpx;
  margin-left: 10rpx;
}
.order-content-list .order-list .order-cancel {
  color: #7b8196;
}
.order-content-list .order-list .order-logo {
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  top: 10rpx;
  right: 20rpx;
}
.order-content-list .order-one-img {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.order-content-list .order-one-img image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 4rpx;
}
.order-content-list .order-two-box {
  width: 100%;
  white-space: nowrap;
  overflow: scroll;
  margin-top: 6rpx;
}
.order-content-list .order-two-box .order-two-img {
  width: 150rpx;
  height: 150rpx;
  display: inline-block;
  margin-left: 40rpx;
  margin-right: -10rpx;
}
.no-more-goods {
  width: 100%;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.no-more-goods .no-order-img {
  width: 200rpx;
  height: 200rpx;
}
.no-more-goods .text {
  font-size: 26rpx;
  color: #bfbfbf;
}
